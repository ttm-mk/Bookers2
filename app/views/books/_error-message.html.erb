<% if book.errors.any? %>

  <% if book.errors.count >= 2 %>
    <h2 class="pt-3"><%= book.errors.count %>errors occurred.</h2>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  <% else book.errors.count == 1 %>
    <h2><%= book.errors.count %>error occurred.</h2>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
