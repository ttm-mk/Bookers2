<%= render 'books/error-message', book: @book %>


<div class="container">
  <div class="row">
    
    <div class="d-flex flex-column mx-auto">
      <%= form_with model: @book do |f| %>
      
        <h2 class="pt-3">Editing Book</h2>
        
        <div class="form-group">
          <label for="InputTitle">Title</label>
          <p><%= f.text_field :title, autoforcus: true, id: "InputTitle" %></p>
        </div>
        
        <div class="form-group">
          <label for="InputOpinion">Opinion</label>
          <p><%= f.text_area :body, autoforcus: true, id: "InputOpinion" %></p>
        </div>
        
        <div class="form-group">
          <p><%= f.submit 'Update Book', class: 'btn btn-secondary' %></p>
        </div>
      <% end %>
      
    </div>

  </div>
</div>
