<div class="container">

<!--template-file-->
  <%= render 'books/error-message', book: @book %>
  <%= render 'books/left-page', user: @user, book: @book %>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table">

          <thred>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thred>

          <tbody>
            <% @books.each do |book| %>
              <tr>

                <td>
                  <%= link_to user_path(book.user_id) do %>
                    <%= image_tag book.user.get_profile_image(80,80) %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book.title, book_path(book.id) %>
                </td>
                <td><%= book.body %></td>
              </tr>

            <% end %>
          </tbody>

        </table>
    </div>
  </div>
</div>