<% if @user.errors.any? %>

  <% if @user.errors.count >= 2 %>
    <%=  @user.errors.count %>errors occurred.
    <ul>
      <%  @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    
  <% else  @user.errors.count == 1 %>
    <%=  @user.errors.count %>error occurred.
    <ul>
      <%  @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-xs-10 mx-auto">
      <%= form_with model: @user do |f| %>
        <h2 class="pt-3">User info</h2>
        
        <div class="form-group">
          <label for="user_name">Name</label>
          <p><%= f.text_field :name, autoforcus: true, id: "user_name" %></p>
        </div>
        
        <div class="form-group">
          <label for="user_image">Image</label>
          <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
        </div>
        
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <p><%= f.text_area :introduction, autoforcus: true, id: "user_introduction" %></p>
        </div>
        
        <div class="form-group">
          <p><%= f.submit 'Update User', class: 'btn btn-secondary' %></p>
        </div>
      <% end %>
      
    </div>

  </div>
</div>
