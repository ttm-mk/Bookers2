          <% @book.each do |book| %>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td>
              <p></p><%= link_to "Edit", edit_book_path, class: 'btn btn-success' %>
