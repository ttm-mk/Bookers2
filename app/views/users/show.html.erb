<!--template-file-->
<%= render 'books/left-page', user: @user, book: @book %>
    
    <div class="col-7 mx-auto">
      <h2>Books</h2>
        <table class="table">
          
          <thred>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thred>
          
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
        
      </table>
    </div>
  </div>
</div>