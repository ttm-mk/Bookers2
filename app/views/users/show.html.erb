<%= flash[:notice] %>

<div class="container">

<!--template-file-->
<%= render 'books/left-page', user: @user, book: @book %>

    <div class="col-8 mx-auto">
      <h2 class="ml-5">Books</h2>
        <table class="table ml-5">

          <thred>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          </thred>

        <tbody>
          <% @user.books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag book.user.get_profile_image(80,80) %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>